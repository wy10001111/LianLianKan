<UserControl x:Class="LianLianKan.Control.LianLianKanMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LianLianKan.Control"
             x:Name="mapWindow"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid x:Name="mapGrid" >
        <MediaElement x:Name="GameOverSound" Source="Sound\GameOver.wav" 
                      MediaEnded="OnMediaEnded" LoadedBehavior="Manual" />
        <MediaElement x:Name="failToMatchSound" Source="Sound\FailToMatch.wav"
                      MediaEnded="OnMediaEnded" LoadedBehavior="Manual" />
        <MediaElement x:Name="succeedToMatchSound" Source="Sound\SucceedToMatch.wav" 
                      MediaEnded="OnMediaEnded" LoadedBehavior="Manual" />
        <Grid x:Name="mapGridForeground" />
    </Grid>
</UserControl>
